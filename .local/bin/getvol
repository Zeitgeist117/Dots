#!/bin/sh

vol="$(pamixer --get-volume)"
function send_notification() {
	volume=$(pamixer --get-volume)
}

if [ "$vol" -gt "70" ]; then
	icon="󰕾"
elif [ "$vol" -gt "30" ]; then
	icon="󰖀"
elif [ "$vol" -gt "0" ]; then
	icon="󰕿"
else
    icon="" 
fi

[ $(pamixer --get-mute) = true ] && echo "          " | dnote -exp 1 -id 1 -loc 5 -pbar $vol 100 && exit

# echo "$icon $vol%"
echo "   $icon $vol%   " | dnote -exp 1 -id 1 -loc 5 -pbar $vol 100
